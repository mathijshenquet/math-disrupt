{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "strict": true,
    "allowJs": false,
    "outDir": ".ts-compiled"
  },
  "include": [
    "lib/**/*.ts",
    "lib/**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    ".ts-compiled"
  ]
}