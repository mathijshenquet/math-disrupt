
{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "strictNullChecks": true,
    "allowJs": false,
    "outDir": ".ts-compiled"
  },
  "include": [
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "node_modules/awesome-typescript-loader/lib/runtime.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".ts-compiled"
  ]
}